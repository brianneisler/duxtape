{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "es6": true,
    "mocha": true,
    "node": true
  },
  "ecmaFeatures": {
    "experimentalObjectRestSpread": true,
    "jsx": true,
    "modules": true
  },
  "parser": "babel-eslint",
  "rules": {
    "arrow-spacing": [2, { "before": true, "after": true }],
    "comma-dangle": [2, "never"],
    "curly": 2,
    "eol-last": 2,
    "id-length": [2, {"min": 2, "max": 50, "properties": "never", "exceptions": ["e", "i", "x", "_"]}],
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-alert": 2,
    "no-const-assign": 2,
    "no-else-return": 2,
    "no-shadow": 2,
    "no-var": 2,
    "prefer-const": 2,
    "quotes": [2, "single"],
    "require-yield": 0,
    "semi": [2, "never"],
    "spaced-comment": 0,
    "strict": [2, "never"]
  }
}
